# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|


    config.vm.define "zabbix" do |zabbix|
    	zabbix.vm.box = "zabbix"
    	zabbix.vm.hostname = "zabbix"
    	zabbix.vm.box_url = "sbeliakou-vagrant-centos-7.3-x86_64-minimal.box"
    	zabbix.vm.network "private_network", ip: "192.168.56.200"
    	zabbix.vm.network :forwarded_port, guest: 8081, host: 8081, auto_correct: true
    	zabbix.vm.network :forwarded_port, guest: 22, host: 2229, auto_correct: true
    	zabbix.vm.provider "virtualbox" do |vb|
    		vb.memory = "2048"
    		vb.name = "zabbix"
    	end

    	zabbix.vm.provision "shell", path: "scripts/server.sh"

    end

    config.vm.define "hostagent1" do |hostagent1|
        hostagent1.vm.box = "sbeliakou-vagrant-centos-7.3-x86_64-minimal.box"
        hostagent1.vm.hostname = "host-agent1"
        hostagent1.vm.network "private_network", ip: "192.168.56.201"
    	config.vm.provider "virtualbox" do |vb|
            vb.memory = "2048"
            vb.name = "hostagent1"
        end
        config.vm.provision "shell", path: "scripts/agent.sh"
    end
end

